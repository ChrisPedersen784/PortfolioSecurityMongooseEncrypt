<%- include("partials/header"); -%>

<h1>Choose the bike you want</h1>

<div class="row g-4 rentalForm">

      <div class="col-md-7 col-lg-6">
        <form class="needs-validation" action="/rent" method="post" novalidate="">
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="firstName" class="form-label">Name</label>
              <input type="text" class="form-control" id="firstName" name="Fname" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="lastName" class="form-label">LastName</label>
              <input type="text" class="form-control" id="lastName" name="Lname" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

            <div class="col-12">
              <label for="email" class="form-label">Email </label>
              <input type="email" class="form-control" id="email" name="Email" placeholder="you@example.com">
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>

            <div class="col-12">
              <label for="phone" class="form-label">Phone number</label>
              <input type="email" class="form-control" id="phone" name="Tel">
              <div class="invalid-feedback">
                Please enter a valid phone number.
              </div>
            </div>

            <div class="col-md-5">
              <label for="country" class="form-label">Country</label>
              <input class="text" id="land" name="Land" required="">
              <div class="invalid-feedback">
                Please enter a valid country.
              </div>
            </div>

            <div class="col-12">
              <label for="address" class="form-label">Address</label>
              <input type="text" class="form-control" id="address" name="Adresse" placeholder="1234 Main St" required="">
              <div class="invalid-feedback">
                Please enter your shipping address.
              </div>
            </div>

            <div class="col-md-3">
              <label for="zip" class="form-label">Zip</label>
              <input type="text" class="form-control" id="postKode" name="PostKode" placeholder="" required="">
              <div class="invalid-feedback">
                Zip code required.
              </div>
            </div>
          </div>

            <div class="col-md-4">
              <label for="Category" class="form-label">Bike Category</label>
              <select class="form-select" id="bike" name="Bike" required="">
                <option value="">Choose...</option>
                <option>Downhill</option>
                <option>Cross-Country</option>
                <option>Trail</option>
                <option>Road</option>
                <option>City</option>
              </select>
              <div class="invalid-feedback">
                Please provide a valid state.
              </div>
            </div>


          <hr class="my-4">

          <button class="w-100 btn btn-primary btn-lg " name="button" type="submit">Continue to checkout</button>
        </form>
      </div>
    </div>
